<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cron Expression Result</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Cron Expression Result</h1>
        <% if (error) { %>
            <div class="alert alert-danger">
                <strong>Error:</strong>
                <%= error %>
            </div>
            <% } else { %>
                <p><strong>Cron Expression:</strong>
                    <%= cronExpression %>
                </p>
                <h2 class="mt-4">Next Occurrences (IST)</h2>
                <ul class="list-group">
                    <% nextOccurrences.forEach(function(date) { %>
                        <li class="list-group-item">
                            <%= date %>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
                    <a href="/" class="btn btn-secondary mt-4">Back</a>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>