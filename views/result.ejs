<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cron Expression Result</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1 class="mt-5">Cron Expression Result</h1>
        <% if (error) { %>
            <div class="alert alert-danger">
                <strong>Error:</strong>
                <%= error %>
            </div>
            <% } else { %>
                <div class="alert alert-success">
                    <strong>Cron Expression:</strong>
                    <%= cronExpression %>
                </div>
                <h3 class="mt-4">Next Occurrences:</h3>
                <ul class="list-group">
                    <% nextOccurrences.forEach(function(date) { %>
                        <li class="list-group-item">
                            <%= date %>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
                    <a href="/" class="btn btn-primary mt-4">Back</a>
    </div>
</body>

</html>