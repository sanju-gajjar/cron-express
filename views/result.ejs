<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cron Expression Result</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1>Cron Expression Result</h1>
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } else { %>
                <div class="form-group">
                    <label for="cronExpression">Generated Cron Expression</label>
                    <input type="text" class="form-control" id="cronExpression" value="<%= cronExpression %>" readonly>
                </div>
                <h3>Next Occurrences:</h3>
                <ul class="list-group">
                    <% nextOccurrences.forEach(function(occurrence) { %>
                        <li class="list-group-item">
                            <%= occurrence %>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
                    <a href="/" class="btn btn-primary mt-3">Back</a>
    </div>

    <!-- JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>